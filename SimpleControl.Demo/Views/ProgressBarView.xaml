<UserControl x:Class="SimpleControl.Demo.Views.ProgressBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleControl.Demo.Views"   
             xmlns:sc="clr-namespace:SimpleControl;assembly=SimpleControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <sc:SimpleProgressBar Width="200" Height="200" Background="#FF55ACD1" Foreground="#FF0E4DA6" 
                     Value="{Binding Procent}" FontSize="30" Minimum="0" Maximum="1" SmallChange="0.01"
                     BackgroundArcThickness="20" ForegroundArcThickness="25"/>
    </Grid>
</UserControl>
