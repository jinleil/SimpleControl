<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  全局颜色  -->
    <SolidColorBrush x:Key="PrimaryColor" Color="Blue" />
    <SolidColorBrush x:Key="SecondaryColor" Color="Red" />
    <SolidColorBrush x:Key="ActivateColor" Color="LightBlue" />
    <SolidColorBrush x:Key="BackgroundColor" Color="WhiteSmoke" />
    <SolidColorBrush x:Key="ForegroundColor" Color="Black" />
    <CornerRadius
        x:Key="DefaultCornerRadius"
        BottomLeft="5"
        BottomRight="5"
        TopLeft="5"
        TopRight="5" />

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ListBox.xaml" />
        <ResourceDictionary Source="Button.xaml" />
        <ResourceDictionary Source="ToggleButton.xaml" />
        <ResourceDictionary Source="ToolTip.xaml" />
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>